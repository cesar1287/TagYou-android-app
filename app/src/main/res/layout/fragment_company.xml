<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.fragment.PersonFragment">

    <LinearLayout
        android:id="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33">
            <TextView
                android:id="@+id/tag1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="AFINIDADE"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_list_tag1"
                android:scrollbars="vertical"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/tag1"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33">

            <TextView
                android:id="@+id/tag2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="GRUPO"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_list_tag2"
                android:scrollbars="vertical"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/tag2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33">

            <TextView
                android:id="@+id/tag3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="SEGMENTO"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_list_3"
                android:scrollbars="vertical"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/tag3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>