<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comcesar1287.github.tagyou.view.CategoryRegisterActivity"
    android:background="@drawable/smartcity">

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="50dp">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_title"
        android:textSize="65dp"
        android:textColor="@color/colorTagYou"
        android:textStyle="bold"
        android:layout_gravity="center"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/tagyou_tag"
            android:layout_gravity="end"/>
    </LinearLayout>

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/categoty_text"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="45dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title">

        <Button
            android:id="@+id/btCategoryPerson"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@color/concrete"
            android:text="@string/categoty_pessoa" />

        <Button
            android:id="@+id/btCategoryCompany"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:text="@string/categoty_empresa"
            android:background="@color/concrete"/>
    </LinearLayout>

</RelativeLayout>
