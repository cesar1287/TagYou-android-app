<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comcesar1287.github.tagyou.view.SignWithActivity"
    android:background="@drawable/smartcity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_title"
            android:textSize="65dp"
            android:textColor="@color/colorTagYou"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/tagyou_tag"
            android:layout_gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp">

        <EditText
            android:id="@+id/email_login"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:background="#fff"
            android:layout_marginBottom="7dp"
            android:paddingLeft="8dp"
            android:hint="@string/login_email"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/senha_login"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:background="#fff"
            android:paddingLeft="8dp"
            android:hint="@string/login_senha"
            android:textSize="15dp"
            android:inputType="textPassword"/>
    </LinearLayout>


    <Button
        android:id="@+id/sign_with_login"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:text="@string/login_botton_entrar"
        android:layout_gravity="center"
        android:layout_marginBottom="1dp"
        android:background="@color/concrete"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_faca_seu_cadastro"
        android:textAllCaps="false"
        android:background="@null"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:onClick="login_button_register"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_ou"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="35dp"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</LinearLayout>
