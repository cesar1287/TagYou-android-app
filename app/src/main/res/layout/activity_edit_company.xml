<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackgroundSplash"
        tools:context="comcesar1287.github.tagyou.view.EditPersonActivity">

        <LinearLayout
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TagYou"
                android:textSize="50sp"
                android:textColor="@color/colorTagYou"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/tagyou_tag"
                android:layout_gravity="end"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/register_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_hashtag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_below="@id/register_photo"
            android:hint="@string/hint_indication"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/register_edit_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:digits="0123456789qwertzuiopasdfghjklyxcvbnm"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_below="@id/register_hashtag"
            android:hint="Nome"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/register_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_below="@id/register_name"
            android:hint="Descrição"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/register_edit_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_below="@id/register_description"
            android:hint="Cidade"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/register_edit_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_below="@id/register_city"
            android:hint="Rua"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/register_edit_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_below="@id/register_street"
            android:hint="Número"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/register_edit_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_below="@id/register_number"
            android:hint="Email"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/register_edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_below="@id/register_email"
            android:hint="Telefone"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/register_edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>

        </android.support.design.widget.TextInputLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/concrete"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/register_phone"
            android:layout_marginTop="15dp">
            <Button
                android:id="@+id/advance"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/white"
                android:background="@color/concrete"
                android:text="Salvar"/>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>