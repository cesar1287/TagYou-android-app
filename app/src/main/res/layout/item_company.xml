<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:layout_margin="0dp"
    android:layout_marginBottom="10dp">


    <android.support.v7.widget.CardView
        android:layout_width="175dp"
        android:layout_height="245dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#4FC3F7"
        android:layout_marginTop="0dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="5dp">


        <ImageView
            android:id="@+id/company_banner"
            android:layout_width="170dp"
            android:layout_height="185dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="60dp"
            android:layout_marginTop="190dp"
            android:background="#fff"
            android:orientation="vertical">
            <TextView
                android:id="@+id/company_name"
                android:text="TESTE TESTANDO"
                android:textSize="15dp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">
                <TextView
                    android:id="@+id/number_person"
                    android:text="5100"
                    android:textSize="13dp"
                    android:textColor="@color/concrete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="1dp"/>

                <TextView
                    android:id="@+id/person"
                    android:text="tem afinidade"
                    android:textSize="13dp"
                    android:layout_toLeftOf="@id/number_person"
                    android:textStyle="bold"
                    android:textColor="@color/concrete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"/>
                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="1dp"
                    android:src="@drawable/tagyou_coracao"/>

            </LinearLayout>

        </LinearLayout>





    </android.support.v7.widget.CardView>


</RelativeLayout>
