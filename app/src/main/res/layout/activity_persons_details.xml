<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comcesar1287.github.tagyou.view.PersonsDetailsActivity"
    android:background="@color/grey">

    <LinearLayout
        android:id="@+id/image_name"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_details_person"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:id="@+id/name_details_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JosÃ© Reginaldo de Tudo"
            android:textSize="23sp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_below="@id/image_name"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/tagyou_icon_email"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/email_details_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="islane.junior@gmail.com"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/email">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/tagyou_icon_phone"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefone"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/phone_details_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(85)8888-8888"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/phone">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/tagyou_icon_date"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nascimento"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/birth_details_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05/01/1995"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/date">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/tagyou_icon_chat_details"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/button_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chamar no chat"
                android:background="@null"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
