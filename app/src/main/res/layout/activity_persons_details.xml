<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comcesar1287.github.tagyou.view.PersonsDetailsActivity">

    <LinearLayout
        android:id="@+id/image_name"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_details_person"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"/>

        <TextView
            android:id="@+id/name_details_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JosÃ© Reginaldo de Tudo"
            android:textSize="23sp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/name_details_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#juniorjunior"
            android:textSize="15sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_chat"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Iniciar chat"
        android:background="@color/concrete"
        android:layout_below="@id/image_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
</RelativeLayout>
