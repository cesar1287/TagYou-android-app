<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comcesar1287.github.tagyou.view.SignUpActivity"
    android:background="@drawable/smartcity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/sign_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/creating_text"
            android:textColor="@color/white"
            android:textSize="29dp"
            android:gravity="center"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_up_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_below="@id/sign_up_text"
            android:gravity="center"
            android:hint="Nome"
            android:layout_marginTop="15dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:inputType="textNoSuggestions"
                android:textColorHint="@color/black"
                android:padding="10dp"
                android:digits="0123456789qwertzuiopasdfghjklyxcvbnm"
                android:background="@drawable/edit_text"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_below="@id/sign_up_name"
            android:hint="Email"
            android:layout_marginTop="1dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:background="@drawable/edit_text"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_up_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_below="@id/sign_up_email"
            android:hint="Senha"
            android:layout_marginTop="1dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:inputType="number"
                android:padding="10dp"
                android:background="@drawable/edit_text"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/sign_up_button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/creating_button"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sign_up_password"
            android:background="@drawable/button"/>

    </RelativeLayout>

</RelativeLayout>
